<hr class="medium-up--hide hr--clear hr--small">

<div class="rich-text" data-section-id="{{ section.id }}" data-section-type="featured-content-section">
  {% if section.settings.section_title != blank %}
    <h2 class="small--text-center h1 rich-text__heading--{{ section.settings.text_size }}">{{ section.settings.section_title | escape }}</h2>
  {% endif %}
  <div class="rte rich-text__text--{{ section.settings.text_size }}">
    {% if section.settings.text != blank %}
      {{ section.settings.text }}
    {% else %}
      <p>{{ 'homepage.onboarding.no_content' | t }}</p>
    {% endif %}
  </div>
</div>

{% schema %}
  {
    "name": "Rich text",
    "settings": [
      {
        "type": "text",
        "id": "section_title",
        "label": "Heading",
        "default": "Talk about your brand"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
      },
      {
        "type": "select",
        "id": "text_size",
        "label": "Size",
        "default": "medium",
        "options": [
          {
            "label": "Small",
            "value": "small"
          },
          {
            "label": "Medium",
            "value": "medium"
          },
          {
            "label": "Large",
            "value": "large"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Rich text",
        "category": "Text"
      }
    ]
  }
{% endschema %}
